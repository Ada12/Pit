<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zeducation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.zeducation.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.zeducation.TestActivity"
            android:label="@string/title_activity_test"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.zeducation.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.zeducation.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.zeducation.FindPasswordActivity"
            android:label="@string/title_activity_find_password"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.zeducation.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="com.example.zeducation.ApplyAccountActivity"
            android:label="@string/title_activity_apply_account"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="com.example.zeducation.TeacherHomeActivity"
            android:label="@string/title_activity_teacher_home"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name="com.example.zeducation.AllCoursesActivity"
            android:label="@string/title_activity_all_courses" 
            android:theme="@android:style/Theme.Holo.Light">
        </activity>
    </application>

</manifest>